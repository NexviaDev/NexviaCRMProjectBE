# MongoDB 설정
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT 설정
JWT_SECRET_KEY=your_jwt_secret_key_here

# 이메일 설정
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# PayPal 설정
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Google OAuth 설정
CLIENT_ID=your_google_client_id_here
CLIENT_SECRET=your_google_client_secret_here
REDIRECT_URI=http://localhost:3000/
REFRESH_TOKEN=your_refresh_token_here

# Naver OAuth 설정
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here
NAVER_CALLBACK_URL=http://localhost:3000/auth/naver/callback

# 서버 설정
PORT=5000

# Toss Payments 설정 (자동결제용)
TOSS_CLIENT_KEY=your_toss_client_key_here
TOSS_SECRET_KEY=your_toss_secret_key_here

# 로깅 및 모니터링 설정
LOG_LEVEL=info
NODE_ENV=development

# 자동결제 재시도 설정
MAX_PAYMENT_RETRIES=3
PAYMENT_RETRY_DELAY=300000

# 보안 설정
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here

# Gemini API Key
Gemini_API_Key=your_gemini_api_key_here
